---
import "../styles/globals.css";

interface Props {
  title: string;
  activePage?: string;
}

const { title, activePage } = Astro.props;

const navItems = [
  { href: "/getting-started", label: "Getting Started", id: "getting-started" },
  { href: "/cli", label: "CLI", id: "cli" },
  { href: "/skills", label: "Skills", id: "skills" },
  { href: "/agents", label: "Agents", id: "agents" },
];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} - skillz.sh</title>
    <meta name="description" content="Skills for AI coding agents" />
    {import.meta.env.DEV && (
      <script>
        import("react-grab");
      </script>
    )}
  </head>
  <body class="min-h-screen flex flex-col bg-white">
    <header class="sticky top-0 z-50 w-full border-b border-gray-200 bg-white/95 backdrop-blur supports-[backdrop-filter]:bg-white/60">
      <div class="flex h-14 items-center px-6">
        <a href="/" class="font-mono font-bold text-lg tracking-tight hover:text-gray-600 mr-8">
          SKZ
        </a>
        <nav class="flex items-center gap-6 text-sm">
          {navItems.map((item) => (
            <a
              href={item.href}
              class:list={[
                "transition-colors font-medium",
                activePage === item.id ? "text-gray-900" : "text-gray-500 hover:text-gray-900",
              ]}
            >
              {item.label}
            </a>
          ))}
        </nav>
      </div>
    </header>

    <div class="flex-1">
      <slot />
    </div>
  </body>
</html>
