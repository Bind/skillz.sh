---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Home">
  <main class="flex-1 flex flex-col items-center justify-center min-h-[calc(100vh-3.5rem)]">
    <div class="text-center">
      <h1 class="text-8xl font-mono font-bold tracking-tight text-gray-900 mb-6">
        SKZ
      </h1>
      <p class="text-xl text-gray-600 mb-8 max-w-md mx-auto">
        Skills and agents for AI coding assistants
      </p>
      <div class="flex gap-4 justify-center">
        <a
          href="/skills"
          class="px-6 py-3 bg-gray-900 text-white rounded-lg font-medium hover:bg-gray-700 transition-colors"
        >
          Browse Skills
        </a>
        <a
          href="/getting-started"
          class="px-6 py-3 bg-gray-100 text-gray-900 rounded-lg font-medium hover:bg-gray-200 transition-colors"
        >
          Get Started
        </a>
      </div>
      <div class="mt-12">
        <code class="text-sm bg-gray-100 px-4 py-2 rounded-lg font-mono text-gray-800">
          bunx skz init
        </code>
      </div>
    </div>
  </main>
</Layout>
