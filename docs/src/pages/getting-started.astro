---
import Layout from "../layouts/Layout.astro";
import PageTitle from "../components/PageTitle.astro";
import PageDescription from "../components/PageDescription.astro";
import SectionTitle from "../components/SectionTitle.astro";
import Paragraph from "../components/Paragraph.astro";
import InlineCode from "../components/InlineCode.astro";
import CodeBlock from "../components/CodeBlock.astro";
import Card from "../components/Card.astro";
import StepNumber from "../components/StepNumber.astro";
---

<Layout title="Getting Started" activePage="getting-started">
  <main class="flex-1 py-12 px-8">
    <div class="max-w-3xl mx-auto">
      <PageTitle>Getting Started</PageTitle>
      <PageDescription>
        Install and configure skz for your AI coding assistant.
      </PageDescription>

      <!-- Step 1 -->
      <div class="mb-10">
        <h3 class="flex items-center gap-3 text-lg font-semibold text-gray-900 mb-3">
          <StepNumber number={1} />
          Initialize your project
        </h3>
        <Paragraph class="mb-4 ml-10">
          Run the <InlineCode>init</InlineCode> command to set up skz in your project:
        </Paragraph>
        <div class="ml-10">
          <CodeBlock code="bunx @bind/skillz init" />
        </div>
        <Paragraph muted small class="mt-3 ml-10">
          This creates a <InlineCode size="xs">.opencode/skz.json</InlineCode> config file.
        </Paragraph>
      </div>

      <!-- Step 2 -->
      <div class="mb-10">
        <h3 class="flex items-center gap-3 text-lg font-semibold text-gray-900 mb-3">
          <StepNumber number={2} />
          Add skills
        </h3>
        <Paragraph class="mb-4 ml-10">
          Add skills to your project using the <InlineCode>add</InlineCode> command:
        </Paragraph>
        <div class="ml-10">
          <CodeBlock code="bunx @bind/skillz add linear-issues-read" />
        </div>
        <Paragraph muted small class="mt-3 ml-10">
          Or run <InlineCode size="xs">bunx @bind/skillz add</InlineCode> without arguments for an interactive picker.
        </Paragraph>
      </div>

      <!-- Platforms -->
      <div class="mt-16 pt-8 border-t border-gray-200">
        <SectionTitle class="mb-6">Supported Platforms</SectionTitle>
        <div class="grid sm:grid-cols-2 gap-4">
          <Card hoverable class="p-5">
            <h3 class="font-semibold mb-2 text-gray-900">OpenCode</h3>
            <Paragraph muted small>Skills installed to <InlineCode size="xs">.opencode/skill/</InlineCode></Paragraph>
          </Card>
          <Card hoverable class="p-5">
            <h3 class="font-semibold mb-2 text-gray-900">Claude Code</h3>
            <Paragraph muted small>Use <InlineCode size="xs">--claude</InlineCode> flag or init in a <InlineCode size="xs">.claude/</InlineCode> directory</Paragraph>
          </Card>
        </div>
      </div>

      <!-- Requirements -->
      <Card variant="muted" class="mt-10 p-5">
        <h3 class="font-semibold mb-3 text-gray-900">Requirements</h3>
        <ul class="text-sm text-gray-600 space-y-2">
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            <a href="https://bun.sh" class="underline hover:text-gray-900 transition-colors">Bun</a> runtime
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            Node.js 18+ <span class="text-gray-400">(optional)</span>
          </li>
        </ul>
      </Card>

    </div>
  </main>
</Layout>
