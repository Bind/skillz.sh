---
import Layout from "../../layouts/Layout.astro";
import PageContainer from "../../components/PageContainer.astro";
import InlineCode from "../../components/InlineCode.astro";
import RegistryListItem from "../../components/RegistryListItem.astro";
import registryData from "../../data/registry.json";

const { agents } = registryData;
---

<Layout title="Agents" activePage="agents">
  <PageContainer>
    <div class="mb-8">
      <InlineCode class="px-4 py-2 rounded-lg">
        bunx skz agent &lt;agent-name&gt;
      </InlineCode>
    </div>

    <div class="grid gap-1">
      {agents.map((agent) => (
        <RegistryListItem
          href={`/agents/${agent.name}`}
          name={agent.name}
          version={agent.version}
          description={agent.description}
          tags={agent.mcp ? Object.keys(agent.mcp) : undefined}
        />
      ))}
    </div>
  </PageContainer>
</Layout>
