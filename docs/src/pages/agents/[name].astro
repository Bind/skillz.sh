---
import Layout from '../../layouts/Layout.astro';
import PageContainer from '../../components/PageContainer.astro';
import InstallCommand from '../../components/InstallCommand.astro';
import Card from '../../components/Card.astro';
import type { RegistryAgent } from '../../types/registry';
import registryData from '../../data/registry.json';

export async function getStaticPaths() {
  const data = registryData as { agents: RegistryAgent[] };
  return data.agents.map((agent) => ({
    params: { name: agent.name },
    props: { agent },
  }));
}

const { agent } = Astro.props;

const installCmd = `bunx skz agent ${agent.name}`;
---

<Layout title={agent.name} activePage="agents">
  <PageContainer>
    <div class="mb-10">
      <h1 class="text-5xl font-bold tracking-tight mb-4 text-gray-900">{agent.name}</h1>
      <p class="text-xl text-gray-600 max-w-2xl leading-relaxed">{agent.description}</p>
    </div>

    <InstallCommand command={installCmd} label="Install agent" class="mb-10" />

    {agent.mcp && Object.keys(agent.mcp).length > 0 && (
      <Card variant="muted" class="mb-10">
        <h3 class="text-sm font-medium text-gray-600 mb-2">MCP Servers</h3>
        <ul class="text-sm text-gray-600 space-y-1">
          {Object.entries(agent.mcp).map(([name, config]) => (
            <li>
              <span class="font-mono text-gray-700">{name}</span>
              {config.url && <span class="text-gray-500 ml-2">(remote: {config.url})</span>}
            </li>
          ))}
        </ul>
      </Card>
    )}
  </PageContainer>
</Layout>
