---
import Icon from "./Icon.astro";

interface Props {
  command: string;
  label?: string;
  class?: string;
}

const { command, label = "Install", class: className } = Astro.props;
---

<div class:list={["", className]}>
  {label && (
    <div class="flex items-center gap-2 text-sm font-medium text-gray-600 mb-3">
      <Icon name="download" size="sm" />
      <span>{label}</span>
    </div>
  )}
  <div class="group relative">
    <div class="absolute -inset-0.5 bg-gradient-to-r from-gray-400 to-gray-300 rounded-lg opacity-20 group-hover:opacity-40 transition-opacity duration-300"></div>
    <div class="relative flex items-center justify-between gap-4 p-4 rounded-lg border border-gray-200 bg-white backdrop-blur">
      <code class="text-base text-gray-800 font-mono">{command}</code>
      <button
        onclick={`navigator.clipboard.writeText('${command.replace(/'/g, "\\'")}')`}
        class="flex items-center gap-2 px-4 py-2 rounded-md bg-gray-900 hover:bg-gray-700 text-white text-sm font-medium transition-all active:scale-95"
      >
        <Icon name="copy" size="sm" />
        <span>Copy</span>
      </button>
    </div>
  </div>
</div>
