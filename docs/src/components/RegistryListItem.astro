---
import Icon from "./Icon.astro";

interface Props {
  href: string;
  name: string;
  version: string;
  description: string;
  tags?: string[];
  class?: string;
}

const { href, name, version, description, tags, class: className } = Astro.props;
---

<a
  href={href}
  class:list={[
    "group block py-2 hover:bg-gray-50 -mx-3 px-3 rounded-md transition-colors",
    className
  ]}
>
  <div class="flex items-start justify-between gap-4">
    <div class="flex-1 min-w-0">
      <div class="flex items-center gap-2">
        <h3 class="font-medium text-gray-900 group-hover:text-gray-700">{name}</h3>
        <span class="text-xs text-gray-400">v{version}</span>
      </div>
      <p class="text-sm text-gray-500 mt-0.5 line-clamp-2">{description}</p>
      {tags && tags.length > 0 && (
        <div class="mt-1.5 flex gap-2">
          {tags.map((tag) => (
            <span class="text-xs px-2 py-0.5 rounded bg-gray-100 text-gray-600">
              {tag}
            </span>
          ))}
        </div>
      )}
    </div>
    <span class="inline-flex flex-shrink-0 opacity-0 group-hover:opacity-100 transition-opacity">
      <Icon name="chevron-right" size="sm" class="text-gray-400" />
    </span>
  </div>
</a>
